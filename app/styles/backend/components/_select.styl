.delipress__select
    display flex
    cursor pointer
    position relative

.delipress__select:after
    content ''
    display block
    clear both

.delipress__select__selected
    font-size 14px
    flex auto
    overflow hidden
    white-space nowrap

.delipress__select__more
    padding-left 4px

    .dashicons
        transition base-transition

.delipress__select__list
    position absolute
    z-index 1
    top calc(100% - 2px)
    left -2px
    right -2px
    margin 0
    padding 0
    background white
    border 2px solid link-color
    border-top none
    border-bottom-left-radius 4px
    border-bottom-right-radius 4px
    box-shadow base-shadow
    transform-origin top
    transform scaleY(0)
    transition base-transition

    li
        margin 0
        padding 10px
        color wp-text-color
        transition .2s padding ease-out

    li:hover
        background link-color
        color white
        padding-left 15px


.delipress__select--is-open
    border-color link-color

    .delipress__select__more .dashicons
        transform rotateZ(-180deg)

    .delipress__select__list
        transform scaleY(1)


// select2
.delipress__select2-posttype
    display flex
    .select2-selection__rendered &
        display inline-block
        white-space: normal

        .dashicons
            display none

    .dashicons
        font-size 14px
        width 14px
        height 14px
        margin-right 6px
        transform translateY(2px)

.select2-selection__choice__remove
    vertical-align top
