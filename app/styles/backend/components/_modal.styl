.delipress__modal
    display none

    &.delipress__is-visible
        display block

.delipress__modal__content
    position fixed
    top 50%
    left 50%
    transform translate3d(-50%, -50%, 0)
    width calc(100% - 60px)
    max-width 800px
    height 70vh
    background-color #FFF
    z-index 10000
    padding pad-m
    border-radius radius
    box-shadow 0 10px 20px rgba(0, 0, 0, .3)

    iframe
        width 100%
        height 100%
        &.preview_template
            min-height 350px

.delipress__modal__close
    position absolute
    right 5px
    top 5px
    display inline-block
    color wp-text-color

    &:hover
        color wp-text-color
    span
        font-size 24px

.delipress__modal__overlay
    position fixed
    left 0
    right 0
    top 0
    bottom 0
    background-color rgba(0, 0, 0, .6)
    z-index 9999
