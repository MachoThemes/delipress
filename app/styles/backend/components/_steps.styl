.delipress__steps
    display flex

.delipress__steps__item
    position relative
    display inline-block
    margin 0
    padding 24px 0 0 0
    color text-color
    font-size .9em
    line-height 1
    text-align center
    flex 1

    &:hover, &:focus, &:active
        color text-color

    // Line
    &:before
        content ''
        display block
        position absolute
        z-index 1
        top 8px
        right 50%
        width 100%
        height 3px
        background neutral

    &:first-child:before
        display none

    // Circle
    &:after
        content ''
        display block
        position absolute
        z-index 2
        top 0
        left calc(50% - 12px)
        width 20px
        height 20px
        line-height 20px
        border-radius 50%
        background neutral
        font-family "dashicons"
        text-align center
        font-size 12px
        color white


.delipress__steps__item--is-active
    color link-color

    &:hover, &:focus, &:active
        color link-color

    &:before
        background linear-gradient(to right, save-color, link-color);

    &:after
        content "\f139"
        background link-color

.delipress__steps__item--is-valid
    color save-color

    &:hover, &:focus, &:active
        color save-color

    &:before
        background save-color

    &:after
        content "\2713"
        font-family "delipress"
        background save-color


.delipress__wizard__modal__steps .delipress__steps__item
    &:before
    &:after
        background #dfe2e4

.delipress__wizard__modal__steps .delipress__steps__item--is-active
    &:before
        background linear-gradient(to right, save-color, link-color);
    &:after
        background link-color

.delipress__wizard__modal__steps .delipress__steps__item--is-valid
    &:before
        background save-color
    &:after
        background save-color
