.delipress__premium-only
    position absolute
    right 4px
    top 4px
    font-size 12px
    display inline-block
    padding 3px 5px 2px 5px
    border-radius radius
    background-color premium-color
    color white
    font-weight 300
    z-index 2


// Premoium count
.delipress__premium-bloc--count
    align-self center
    margin-left 150px

.delipress__premium-bloc--count__top, .delipress__premium-bloc--count__bottom
    display flex
    justify-content space-between
    align-items center

.delipress__premium-bloc--count__bar
    width 100%
    height 8px
    border-radius radius
    background-color neutral
    margin 6px 0

    span
        height 8px
        border-radius radius
        display block
        background-color brand-2
