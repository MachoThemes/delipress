// ============================
// = Premium incentive styles =
// ============================

.delipress__premium-bloc
    margin 20px 0
    overflow hidden

    &.delipress__premium-bloc--line
        margin 40px 0 0

        p
            margin 0

        .delipress__f1:last-of-type
            text-align right


.delipress__premium-bloc__wrap
    padding pad-s
    max-width 380px
    width 100%
    //background-color rgba(neutral, 60%)
    //border 3px solid brand-2
    border 1px solid rgba(0, 0, 0, .05)
    border-radius radius
    overflow hidden
    background-color rgba(neutral, 50%)

