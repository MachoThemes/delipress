.delipress__settings
    margin-top pad-m

    &.delipress__settings--behavior

        .delipress__settings__item
            height input-height*.8

            &.delipress__settings__item-hauto
                height auto


.delipress__settings__item
    margin 12px 0

.delipress__settings__item__label
    display flex
    align-items center
    font-size 1.1em
    padding-right 16px

    @media screen and (max-width: 1350px)
        padding-right 6px

    label
        color wp-text-color

.delipress__settings__item__label--top
    align-self flex-start
    padding-top 2px

.delipress__settings__item__field
    display flex
    align-items center

.delipress__settings__item__field--double
    justify-content center
    align-items flex-start
    flex-direction column

    @media only screen and (max-width: 1240px)
        flex 9
        justify-content flex-start


    div + div
        margin-top pad-s

.delipress__settings__item__field-flex
    display flex
    align-items center

.delipress__settings__item__help
    display flex
    justify-content center
    flex-direction column
    line-height 1.4
    padding-left 16px
    position relative

    p
        margin 6px 0 0 0

.delipress__settings__item__help--double
    justify-content flex-end
    @media only screen and (max-width: 1240px)
        flex none

.delipress__settings__item--jump
    margin-top pad-m

.delipress__settings__item__error
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    padding-left 16px
    display flex
    align-items center
    background white
    color brand-1

    span + span
        margin-left 4px

#delipress-send-test
    padding-top 12px
    padding-bottom 12px

.delipress__provider
    display flex
    border 1px solid neutral
    border-radius radius
    align-items center

.delipress__provider__form
    flex 1
    padding pad-s

    h3
        margin-top pad-l

.delipress__provider__form__letsconnect
    text-align center

    img
        display inline-block
        max-height 40px
        max-width 160px
        vertical-align middle
        margin 0 4px

    span
        transform translateY(4px)

.delipress__provider__help
    flex 1
    padding pad-s
    background neutral

    h3:first-child
        margin-top 0


// Special case : later field in campaign
.delipress__settings__item__field__later
    display inline-block
    margin-left pad-s
    position relative

    span
        position absolute
        right 6px
        top 21px
        font-size 18px
        color darken(neutral, 15%)
        transform translateY(-50%)
        pointer-events none

    input
        max-width 200px
        background-color white

.delipress__settings__item__field__timezone
    opacity 0
    transform translateX(5px)
    transition .5s opacity ease-out, .5s transform ease-out
    margin-left pad-s

    @media only screen and (min-width: 1240px)
        display none

.delipress-screen-large .delipress__settings__item__field__timezone
    display none

    @media only screen and (min-width: 1240px)
        display inline-block

.delipress__settings__item__field__timezone.is-visible
    opacity .7
    transform translateX(0)

