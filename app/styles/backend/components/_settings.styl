.delipress__bloc-premium
    border 1px solid darken(neutral, 5%)
    border-radius radius
    align-items center

    ul
        margin 0
        padding-left 2em
        list-style-type disc

    & > .delipress__f1
        padding pad-s

    h3:first-child
        margin-top 0

.delipress__bloc-premium__help
    background-color neutral



.delipress__settings__switch-everything
    opacity .4
    pointer-events none

    &.delipress__is-visible
        opacity 1
        pointer-events all

.delipress__settings__item__label label[for="display_all_everything"]
    font-weight bold

.delipress__settings
    .delipress__is-disabled
        opacity .4
        pointer-events: none

.delipress__settings__filters

    .delipress__f2
        padding 0 .5em
        background-color neutral

    .delipress__f10
        padding 0 1em


    .select2-container--default .select2-selection--multiple .select2-selection__choice
        background-color neutral
        border none
        box-shadow 0 0 0 1px rgba(0, 0, 0, .1)

    .select2-container--default .select2-selection--multiple
        border 1px solid neutral

.delipress__settings__filter__select
    margin 0

// Settings premium bloc
.delipress__settings__premium-congrats
    padding 2px 4px
    text-align center
    color: #FFF
    border-radius: 0 radius radius 0
    background-color premium-color
    display flex
    align-items center
    justify-content center
    position absolute
    z-index 2
    right 2px
    height 38px

    p
        margin 4px
        font-weight 600
        font-size 12px
