.delipress__simplepicker
    position relative
    border-radius radius
    width 40px
    height 40px
    border 2px solid neutral
    padding 5px
    background neutral
    cursor pointer
    transition .2s background ease-out

.delipress__simplepicker__icon
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    display flex
    align-items center
    justify-content center
    opacity 0
    transition base-transition

    .dashicons
        position absolute
        color white

    &:hover
        opacity 1

.delipress__simplepicker--tiny
    width 40px
    height 25px
    border-width 3px

.delipress__simplepicker--is-visible .delipress__simplepicker__list
    transform scale3d(1, 1, 1)
    opacity 1

.delipress__simplepicker__list
    position absolute
    top -1px
    left 36px
    z-index 1
    background white
    border 2px solid neutral
    border-top-right-radius 20px
    border-bottom-right-radius 20px
    padding 1px 5px
    margin 0
    display flex
    flex-wrap wrap
    width 320px
    transition opacity .2s ease-out, transform .2s ease-out
    transform scale3d(0, 1, 1)
    opacity 0
    transform-origin left
    will-change transform, opacity

    li
        width 22px
        height 22px
        border-radius 50%
        margin 5px 4px
        cursor pointer
        transition base-transition
    li:hover
        transform scale(1.3)

// Sketch Picker
.sketch-picker
    div[title="empty"]
        box-shadow brand-1 0px 0px 0px 1px inset !important
        background linear-gradient(to top left, rgba(0,0,0,0) 0%, rgba(0,0,0,0) calc(50% - 1px), brand-1 50%, rgba(0,0,0,0) calc(50% + 1px), rgba(0,0,0,0) 100%) !important
