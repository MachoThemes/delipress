.delipress__tooltip
    cursor help
    opacity .5
    position relative

    label + &
        margin-left .5rem

.delipress__tooltip-container
    position absolute
    background tooltip-color
    color #FFF
    font-size 13px
    max-width 280px
    border-radius radius
    box-shadow 0 0 10px rgba(0,0,0,0.3)
    padding .4em .6em
    //text-align center

    a
        color link-color

.delipress__tooltip-arrow
    width 0
    height 0
    border-style solid
    position absolute
    margin 5px
    border-color tooltip-color

.delipress__tooltip-container[x-placement^="top"]
    margin-bottom 5px

.delipress__tooltip-container[x-placement^="bottom"]
    margin-top 5px

.delipress__tooltip-container[x-placement^="right"]
    margin-left 5px

.delipress__tooltip-container[x-placement^="left"]
    margin-right 5px

.delipress__tooltip-container[x-placement^="top"] .delipress__tooltip-arrow
    border-width 5px 5px 0 5px
    border-left-color transparent
    border-right-color transparent
    border-bottom-color transparent
    bottom -5px
    left calc(50% - 5px)
    margin-top 0
    margin-bottom 0

.delipress__tooltip-container[x-placement^="bottom"] .delipress__tooltip-arrow,
    border-width 0 5px 5px 5px
    border-left-color transparent
    border-right-color transparent
    border-top-color transparent
    top -5px
    left calc(50% - 5px)
    margin-top 0
    margin-bottom 0



.delipress__tooltip-container[x-placement^="right"] .delipress__tooltip-arrow,
    border-width 5px 5px 5px 0
    border-left-color transparent
    border-top-color transparent
    border-bottom-color transparent
    left -5px
    top calc(50% - 5px)
    margin-left 0
    margin-right 0

.delipress__tooltip-container[x-placement^="left"] .delipress__tooltip-arrow,
    border-width 5px 0 5px 5px
    border-top-color transparent
    border-right-color transparent
    border-bottom-color transparent
    right -5px
    top calc(50% - 5px)
    margin-left 0
    margin-right 0
