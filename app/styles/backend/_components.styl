.delipress
    *
        box-sizing border-box

    h1
        position relative
        text-transform uppercase
        font-size 2em
        font-weight 500
        margin pad-l 0 pad-s
        padding-bottom 12px

        &:after
            content ''
            display block
            position absolute
            height 3px
            border-radius 3px
            width 65px
            background neutral
            bottom 0
            left 0

        small
            font-size 1.2rem
            color text-color
            text-transform none
            font-weight 300
            margin-left pad-xs

    h2
        font-size 1.5em
        margin pad-xl 0 pad-s
        a
            color wp-text-color

    h3
        margin-top 2em

    img
        max-width 100%

    a
        text-decoration none
        box-shadow none

.delipress__center
    text-align center

.delipress__topmargin
    margin-top pad-m

.delipress__soon
    opacity .4

.delipress__stars
    color #FFB900

.delipress__savenotice
    margin-left 5px
    font-style italic

.delipress__full
    width 100%

.delipress__intro
    font-weight 300
    font-size 15px
    margin pad-xs 0 pad-m 5px

    & + .delipress__section
        padding 0

.delipress__mandatory
    display inline-block
    color mandatory-color
    border-radius radius
    font-size 11px
    line-height 1
    text-transform uppercase

    &:before
        content ''
        display inline-block
        width 8px
        height 8px
        border-radius 50%
        background mandatory-color
        margin-right 3px
