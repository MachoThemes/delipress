.delipress__template-list__choices
    padding pad-xs
    margin 0 auto
    max-width 1100px
    overflow hidden
    min-height 260px

.delipress__template-list__choice
    display block
    border-radius radius
    margin pad-s
    padding pad-m
    background lighten(neutral, 40%)
    height 230px
    width "calc(50% - %s *2)" % pad-s
    text-align center
    transition transform .375s ease, box-shadow .375s ease
    float left
    position relative

    &:not(.js-template-list-choice-inactive):hover
        transform translateY(-4px)

    h2
        margin 0
        line-height 1.3

    p
        color text-color
        font-size 15px


    &:nth-child(3).delipress--is-active
        background brand-1

    &:nth-child(4).delipress--is-active
        background brand-2

    &:nth-child(1).delipress--is-active
        background brand-3

    &:nth-child(2).delipress--is-active
        background link-color

    &.delipress--is-active
        .delipress__template-list__choice__picto
            box-shadow 0 0 0 2px white
            background transparent

        h2
            color white



.delipress__template-list__choice__premium
    display block
    position absolute
    right 10px
    top 10px
    text-align left
    background premium-color
    color white
    padding 6px 10px
    border-radius radius
    width 95px
    height 30px
    overflow hidden
    z-index 10
    transition all .325s ease

    .delipress__template-list__choice__premium-badge
        position absolute
        left 0
        top 6px
        font-weight 500
        width 100%
        text-align center

        .dashicons
            font-size 16px
            width 16px
            height 16px
            line-height 16px

    .delipress__template-list__choice__premium-incentive
        opacity: 0
        visibility hidden
        transition opacity .175s linear .3s

    .delipress__template-list__choice:hover &
        width 70%
        height 150px
        padding 10px
        transform-origin center center
        transform translateX(calc(-15% - 10px)) translateY(20%)
        background #FFF
        box-shadow 0 0 8px rgba(0, 0, 0, .15)

        .delipress__template-list__choice__premium-badge
            top 10px
            color premium-color

        .delipress__template-list__choice__premium-incentive
            opacity 1
            visibility visible
            color text-color
            font-size 14px
            margin-top 20px
            text-align center

            a
                margin 10px 0
                display inline-block

.delipress__template-list--step2
    .delipress__template-list__choice__premium
        display none

.delipress__choose-template__picto--1
    background brand-1

.delipress__choose-template__picto--2
    background brand-2

.delipress__choose-template__picto--3
    background brand-3

.delipress__choose-template__picto--4
    background link-color


.delipress__template-list__choice__picto
    margin 0 auto pad-s auto
    font-size 50px
    width 1em
    height 1em
    border-radius 50%
    text-align center

    span
        font-size .6em
        width 1em
        height 1em
        line-height 1.66em
        color white
        transform translateY(1px)

.delipress__template-list__items
    padding pad-xs
    padding-left pad-s
    display none
    opacity 0

    h2
        margin-top 0


.delipress__template-list--step2
    overflow hidden

    .delipress__template-list__choices
        float left

    .delipress__template-list__items
        display block
        float left
        width calc(100% - 280px)

        & > div
            display none

        & > .delipress--is-active
            display block

