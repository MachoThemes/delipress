.delipress__summary
    display flex

.delipress__summary__datas
    flex 1
    margin-right pad-s

.delipress__summary__datas__table
    border-collapse collapse
    min-width 400px

    tr:first-child td:not(:last-child)
        border-top 1px solid neutral

    td
        padding 5px
        border-bottom 1px solid neutral

    td:nth-child(2)
        padding-right 30px

    td:nth-child(3)
        padding-right 30px
        color wp-text-color

    td:nth-child(4)
        font-size 11px

        a
            color link-color

    td:last-child
        border 0
        padding 0 5px

    em
        color text-color

.delipress__summary__preview
    width 440px

.delipress__launch
    background #EDF7FD
    padding pad-s
    text-align center
    border-radius radius

    img
        width 120px
