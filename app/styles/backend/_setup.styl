// WP Page class
.delipress_page_delipress-wizard
    overflow hidden
    height 100vh


// Wizard
.delipress__wizard
    position fixed
    z-index 100000
    top 0
    left 0
    right 0
    bottom 0
    background #f1f1f1
    display flex
    align-items center
    justify-content center
    overflow scroll

.delipress__wizard__quit
    position absolute
    top 10px
    right 10px

.delipress__wizard__modal
    width calc(100% - 40px)
    max-width 650px
    padding pad-m 0
    position absolute
    top 0
    left 50%
    transform translate3D(-50%, 0, 0)
    min-height 100vh
    display flex
    flex-direction column
    justify-content center

    h1
        margin-top pad-s
        font-size 1.8em

    *:last-child
        margin-bottom 0

.delipress__wizard__modal__logo
    display block
    margin 0 auto pad-m
    width 150px

.delipress__wizard__modal__steps
    margin-bottom pad-m
    display flex
    justify-content flex-start

.delipress__wizard__modal__main
    background white
    box-shadow base-shadow
    border-radius radius

.delipress__wizard__modal__content
    padding pad-s

    h2
        margin-top pad-m

.delipress__wizard__modal__letsconnect
    text-align center

    img
        max-height 60px
        max-width 160px
        vertical-align middle
        margin 0 pad-xs

.delipress__wizard__modal__partner
    display flex
    margin pad-s 0

.delipress__wizard__modal__partner__logo
    width 33.3333333%
    border 1px solid neutral
    border-right 1px solid neutral
    border-top-left-radius radius
    border-bottom-left-radius radius
    position relative
    text-align center
    background radial-gradient(ellipse at center, white 58%, #F1F1F1 100%);
    transition base-transition

    img
        display block
        position absolute
        max-height 70%
        max-width 70%
        width auto
        top 50%
        left 50%
        transform translate(-50%, -50%)

.delipress__wizard__modal__partner__content
    position relative
    flex 1
    border 1px solid neutral
    border-left none
    border-top-right-radius radius
    border-bottom-right-radius radius
    padding pad-xs

.delipress__wizard__modal__partner__content__title
    font-weight bold
    font-size 16px
    color wp-text-color
    margin 0

.delipress__wizard__modal__partner__content__links
    margin-bottom 0
    font-size 12px

.delipress__wizard__modal__partner__content__configure
    position absolute
    top 10px
    right 10px

.delipress__wizard__modal__providers
    display flex
    flex-wrap wrap
    margin 0 -10px

.delipress__wizard__modal__providers__item
    width calc(33.3333% - 20px)
    margin pad-xs

.delipress__wizard__modal__providers__item__logo
    display block
    border 1px solid neutral
    border-top-left-radius radius
    border-top-right-radius radius
    border-bottom none
    position relative
    text-align center
    height 100px
    background radial-gradient(ellipse at center, white 58%, #F1F1F1 100%);
    transition base-transition

    img
        display block
        position absolute
        max-height 70%
        max-width 70%
        width auto
        top 50%
        left 50%
        transform translate(-50%, -50%)

.delipress__wizard__modal__providers__item__links
    display flex
    font-size 12px

    div
        flex 2
        padding 4px 8px
        border 1px solid neutral
        border-bottom-left-radius radius
        border-right none

    > a
        flex 1
        padding 4px 8px
        background save-color
        color white
        border-bottom-right-radius radius
        border 1px solid save-color

        &:hover, &:focus
            color white


.delipress__wizard__modal__list
    margin pad-s 0
    border-top 1px solid neutral

.delipress__wizard__modal__list__item
    border-bottom 1px solid neutral
    padding 8px 0
    margin-bottom 0

.delipress__wizard__modal__more
    margin-top 35px

    h3
        margin-top pad-xs
        line-height 1.3

    .delipress__row
        align-items center
        p
            font-size 14px

    @media screen and (max-height: 1090px)
        img
            height 140px

    .delipress__center
        margin-top 40px

.delipress__wizard__nl
    margin 20px 0

    .delipress__row
        align-items center
        padding 1.5em 2em 0

        .delipress__f1
            margin 0

            p
                margin-bottom 10px

    h3
        margin 0

    @media screen and (max-height: 1090px)
        margin 10px 0

.delipress__wizard__form-el
    display flex
    justify-content flex-start
    align-items center

    input
        height 40px
        padding .4em 1em
        margin 0
        border none
        box-shadow none

    input[type="email"]
        width 260px
        border 1px solid neutral
        border-radius radius 0 0 radius

    input[type="submit"]
        text-transform uppercase
        font-size 13px
        font-weight bold
        background-color brand-2
        color #ffffff
        border-radius 0 radius radius 0


.delipress__wizard__modal__finish
    text-align center
    margin pad-m 0

.delipress__wizard__slider
    overflow hidden

    &.step2
        .delipress__wizard__slider__content
            animation-name SLIDE
            animation-duration .3s
            animation-fill-mode forwards
            animation-timing-function ease-out

        .delipress__wizard__slider__head > div
            display none

        .delipress__wizard__slider__head > div + div
            display block

.delipress__wizard__slider__head
    position relative
    margin-bottom 1em

    & > div + div
        display none

.delipress__wizard__slide
    align-self: center
    width 50%

    .delipress__settings
        margin 0

    .delipress__button .dashicons
        font-size 16px

    .delipress__button + .delipress__button
        margin-left 1em

    .js-wizard-slide-prev
        margin-left 1em

.delipress__wizard__slider__content
    overflow hidden
    display flex
    width 200%
    transition transform .6s cubic-bezier(0.445,  0.050, 0.550, 0.950)


@keyframes SLIDE
    0%
        opacity 1
        transform translate3d(0,0,0)

    20%
        opacity .5
        transform translate3d(-25%,0,0)

    45%
        opacity .5
        transform translate3d(-40%,0,0)
    80%
        opacity .8
        transform translate3d(-50.2%,0,0)
    100%
        opacity 1
        transform translate3d(-50%,0,0)
